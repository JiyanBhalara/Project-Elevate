{
  "version": 2,

  "installCommand": "npm install",
  "buildCommand": "npm run build",

  "builds": [
    {
      "src": "apps/api/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/dist/**",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "^/api/(.*)",          
      "dest": "apps/api/src/main.ts"
    },

    { "handle": "filesystem" },     

    {
      "src": "/(.*)",               
      "dest": "apps/web/dist/index.html"
    }
  ]
}
